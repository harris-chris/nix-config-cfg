[
  {
    "name": "bluetooth on",
    "command": "bluetoothctl power on && bluetoothctl scan on"
  },
  {
    "name": "bluetooth off",
    "command": "bluetoothctl power off"
  },
  {
    "name": "home",
    "command": "sh $HOME/.screenlayout/home.sh"
  },
  {
    "name": "laptop",
    "command": "sh $HOME/.screenlayout/laptop.sh"
  },
  {
    "name": "lock",
    "command": "multilockscreen -l dim"
  },
  {
    "name": "maim copy",
    "command": "maim -s | xclip -selection clipboard -t image/png"
  },
  {
    "name": "maim save",
    "command": "maim -s ~/Downloads/screengrab_$(date +%s).png"
  },
  {
    "name": "nnn",
    "command": "alacritty -e nnn -c"
  },
  {
    "name": "power off",
    "confirm": true,
    "command": "systemctl poweroff"
  },
  {
    "name": "reboot",
    "confirm": true,
    "command": "systemctl reboot"
  },
  {
    "name": "suspend",
    "command": "systemctl suspend"
  },
  {
    "name": "vol",
    "command": "alacritty -e ncpamixer"
  }
]
